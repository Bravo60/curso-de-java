package entities;

import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import entities.enums.OrderStatus;

public class Order {
	
	private static SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy HH:mm:ss"); // uma unica vez para todos os posts
	
	// Order
	private Date moment;
	private OrderStatus Level; // enum
	
	// Client
	private String name;
	private String email;
	private Date birthDate;
	
	private List<OrderItem> orders = new ArrayList<>(); // não entra no construtor
	
	private Order() {
	}

	public Order(Date moment, OrderStatus level, String name, String email, Date birthDate, List<OrderItem> orders) {
		this.moment = moment;
		Level = level;
		this.name = name;
		this.email = email;
		this.birthDate = birthDate;
		this.orders = orders;
	}

	
}
